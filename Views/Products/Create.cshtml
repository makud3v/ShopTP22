@model ShopTP22.Models.Products.ProductAdminCreateViewModel

<div>
    <h1>New</h1>
    <p>Product</p>

    <dl class="row">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="ListingName" class="form-label"></label>
                <input asp-for="ListingName" class="form-control" />
            </div>

            <div class="form-group row">
                <label asp-for="ListingDescription" class="form-label"></label>
                <textarea asp-for="ListingDescription" class="form-control"></textarea>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" type="number" />
            </div>

             <div class="form-group row">
                <label asp-for="BaseDiscount" class="form-label"></label>
                <input asp-for="BaseDiscount" class="form-control" type="number"/>
            </div>

            <div class="form-group row">
                <label asp-for="StockAmount" class="form-label"></label>
                <input asp-for="StockAmount" class="form-control" type="number" />
            </div>
            <div class="form-group row">
                <label asp-for="Images" class="form-label"></label>
                <input asp-for="Images" type="file" class="form-control" />
            </div>



            <div class="form-group row">
                <div class="col-sm-3">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">Back</a>
                    <input type="submit" value="Confirm" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </dl>
</div>